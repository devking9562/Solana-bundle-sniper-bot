{
    "compilerOptions": {
        "outDir": "./dist",
        "declaration": true,
        "allowUnreachableCode": false,
        "noImplicitAny": true,
        "module": "CommonJS",
        "target": "ESNext",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "allowJs": true
    },
    "include": [
        "./src/**/*"
    ]
}